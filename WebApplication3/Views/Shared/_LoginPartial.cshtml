﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager


@if (User.Identity?.IsAuthenticated == true)
{
    <a class="" asp-page="/UserOrder/USerOrder" title="Manage">Hello @User.Identity.Name!</a>
    <form class="" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="btn btn-secondary">Logout</button>
    </form>
}
else
{
<a class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
<a class="btn btn-secondary" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
}
